Port 22

# HostKey directives are injected dynamically by the entrypoint
# from all ssh_host_*_key files found in /etc/ssh/host_keys/

# Authentication
PasswordAuthentication no
PermitRootLogin no
PubkeyAuthentication yes
AuthorizedKeysFile /etc/sftp/keys/%u

# SFTP only (all users)
Subsystem sftp internal-sftp
ForceCommand internal-sftp
ChrootDirectory /home/%u

# Hardening
X11Forwarding no
AllowTcpForwarding no
PermitTunnel no
GatewayPorts no

# Logging
LogLevel INFO
